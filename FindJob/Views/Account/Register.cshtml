@model RegisterModel;
@{
    ViewBag.Title = "Register";
    Layout = "_Account";
}
<form asp-action="Register" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName", value=""/>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password", value="123"/>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword", value="123"/>
    </div>
    <div>
        <input class="form-check-label" type="radio" asp-for="Role" value="Worker" checked>
        <label>Рабочий</label>
    </div>
    <div>
        <input type="radio" asp-for="Role" value="Employer">
        <label>Работодатель</label>
    </div>
    <div>
        <button class="btn btn-success" type="submit">Сохранить и войти</button>
    </div>
</form>
