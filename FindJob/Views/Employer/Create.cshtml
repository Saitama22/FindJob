@model Vacancy;
@{
    ViewBag.Title = "FindJob - создание/редактирование вакансии";
    Layout = "_EmployerLayout";
}
<form asp-action="Save" method="post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Post"></label>
        <input asp-for="Post" />
        <span asp-validation-for="Post" />
    </div>
    <div class="form-group">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" />
    </div>
    <div class="form-group">
        <label asp-for="Info"></label>
        <textarea asp-for="Info"></textarea>
    </div>
    <div>
        <button class="btn btn-outline-success" type="submit">Сохранить</button>
    </div>
    <a asp-action="Vacancies">Отмена</a>
</form>
